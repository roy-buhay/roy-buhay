<style>
    .card__content {
        background-color: var(--tertiary-color);
    }
    .card__content:active {
        background-color: var(--tertiary-hover-color);
    }
    .phone {
        background-color: #0b3963;
        display: block;
        width: 210px;
        height: 100%;
        margin: 0 auto;
        margin-top: 2rem;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        position: relative;
        padding: 0 0.8rem;
        text-align: center;
        overflow: hidden;
    }
    .phone > span {
        display: block;
    }
    .phone:after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: -o-linear-gradient(250deg, rgba(0, 0, 0, 0), #000),
            url("./src/assets/images/noise.svg");
        background: linear-gradient(200deg, rgba(0, 0, 0, 0), #000),
            url("./src/assets/images/noise.svg");
        -webkit-filter: contrast(200%);
        filter: contrast(200%);
        mix-blend-mode: screen;
        opacity: 0.3;
    }
    .phone-speaker {
        background-color: #264870;
        display: inline-block;
        border-radius: 50px;
        width: 50px;
        height: 8px;
        margin: 8% auto 0;
    }
    .phone-camera {
        background-color: #264870;
        border-radius: 50px;
        display: inline-block;
        width: 10px;
        height: 10px;
        position: absolute;
        top: 5%;
        right: 32%;
    }
    .phone-img {
        background: -o-linear-gradient(45deg, #f99c7e, #c93f00);
        background: linear-gradient(45deg, #f99c7e, #c93f00);
        height: 100%;
        border-radius: 0.1rem;
        margin-top: 1.2rem;
        padding-top: 0.2rem;
    }
    .phone-img:after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: -o-radial-gradient(55% 42%, circle, rgba(0, 0, 0, 0), #000),
            url("./src/assets/images/noise.svg");
        background: radial-gradient(circle at 55% 42%, rgba(0, 0, 0, 0), #000),
            url("./src/assets/images/noise.svg");
        -webkit-filter: contrast(200%);
        filter: contrast(200%);
        mix-blend-mode: screen;
        opacity: 0.5;
    }
    .phone-message {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        padding: 0.4rem 0.5rem 0;
    }
    .phone-message img {
        width: 2.2rem;
        height: 2.2rem;
        border-radius: 100%;
    }
    .phone-message > span {
        -webkit-box-flex: 1;
        -ms-flex: 1;
        flex: 1;
        margin-left: 0.5rem;
        text-align: left;
    }
    .phone-message > span p {
        font-family: "Karla", sans-serif;
        font-size: 0.7rem;
        font-weight: 700;
        color: white;
        width: 100%;
    }
    .phone-message > span small {
        font-family: "Karla", sans-serif;
        font-size: 0.6rem;
        display: block;
        color: #e8b8ac;
    }
    .phone-search {
        background-color: #e27854bd;
        display: block;
        height: 1.4rem;
        margin: 0.5em;
        border-radius: 0.2rem;
    }

    @media screen and (max-width: 900px) {
        .phone {
            width: 200px;
        }
    }
</style>
